<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="0x106000c"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.androidBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.v7.widget.Toolbar
            android:background="@color/grey_900"
            android:contentInsetStartWithNavigation="0dp"
            android:id="@id/toolbar"
            android:layout_height="UNKNOWN_DATA_0x7f010046"
            android:layout_width="match_parent"
            android:popupTheme="@style/ThemeOverlay.androidCompat.Light"
            android:theme="@style/ThemeOverlay.androidCompat.Dark.ActionBar" />
    </android.support.design.widget.androidBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@id/recyclerView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:scrollingCache="true" />
